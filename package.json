{
	"name": "samoacodehub-website",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"lint": "prettier --plugin-search-dir . --check . && eslint . --fix",
		"format": "prettier --plugin-search-dir . --write .",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,svelte,json,css,scss}": [
			"npm run format",
			"npm run lint",
			"git add ."
		]
	},
	"devDependencies": {
		"@playwright/test": "^1.43.1",
		"@skeletonlabs/skeleton": "2.9.2",
		"@skeletonlabs/tw-plugin": "0.4.0",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.8.3",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "0.5.12",
		"autoprefixer": "10.4.19",
		"eslint": "^9.1.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.38.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"svelte": "^4.2.19",
		"tailwindcss": "3.4.3",
		"vite": "^5.4.6",
		"vite-plugin-tailwind-purgecss": "0.3.2",
		"vitest": "^1.5.1"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "1.6.3",
		"@tabler/icons-svelte": "^3.2.0",
		"embla-carousel-svelte": "^8.3.0",
		"globals": "^15.0.0",
		"svelte-vertical-timeline": "^1.0.1"
	}
}
